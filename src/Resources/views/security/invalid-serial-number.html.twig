<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>{{ 'access_denied'|trans }}</title>
    </head>
    <body class="five-zero-zero">
        <form method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('serial_number') }}" />
            <div class="error-code">403</div>
            <div class="error-message">{{ 'invalid_serial_number'|trans }}</div><br/><br/>
            <div class="error-message">{{ 'contact_developer'|trans }}</div><br/><br/>
            <div class="error-message">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ include('@SerialNumber/security/_flashes.twig') }}
                                <input type="text" name="key" class="form-control" placeholder="{{ 'input_serial_number'|trans }}"/>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="button-place">
                <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-save"></span> {{ 'submit'|trans }}</button>
                <a href="{{ path('dashboard') }}" class="btn btn-default btn-lg waves-effect">{{ 'go_to_homepage'|trans }}</a>
            </div>
        </form>
    </body>
</html>